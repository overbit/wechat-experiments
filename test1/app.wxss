/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
} 

.div {
  margin-top: 10px;
}

button {
    border-radius: 2px;
    border: 0;
    display: inline-block;
    padding: .615em .923em;
    margin: 0;
    line-height: 1.5em;
    vertical-align: middle;
    color: #fff;
    background: #0047bb;
    white-space: nowrap;
    -webkit-appearance: none;
    cursor: pointer;
    font-size: 10px;
    font-size: 1.0rem;
    transition: all .25s ease;
}

.global-icon-search {
    background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 40 40'%3E%3Cpath fill='%23dedfdf' fill-rule='evenodd' data-name='Search Icon' d='M16 14.626L14.626 16l-4.5-4.5a6.36 6.36 0 1 1 2.62-5.13 6.322 6.322 0 0 1-1.246 3.76zM6.38 1.9A4.478 4.478 0 1 1 1.9 6.38 4.478 4.478 0 0 1 6.38 1.9zm7.8 4.478z'/%3E%3C/svg%3E");
    width: 100%;
    height: 100%;
}

.search_box_button {
    width: 44px;
    padding: 0;
    float: right;
    overflow: hidden;
    transition: all .25s ease;
    border-radius: 0 2px 2px 0;
    height: 100%;
}

.search_box_input {
    border: 1px solid #919d9d;
    border-right: 0;
    border-radius: 2px 0 0 2px;
    overflow: hidden;
    height: 100%;
    transition: border-color .25s ease;
}

view {
    font-family: "Century Gothic", Arial, sans-serif;
    box-sizing: border-box;
}

input[type=text]
{
  vertical-align: middle;
    border-radius: 2px;
    transition: border-color .15s ease-in-out;
    color: #333;
    background: #fff;
    padding: .571em .7em;
    border: 1px solid #919d9d;
}

.continue-btn {
      margin: 0 auto;
      padding: .571em 3em;
      width: 75%;
      position: absolute;
      bottom: .571em;
}