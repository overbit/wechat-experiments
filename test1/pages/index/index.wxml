<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="div">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view class="div">
  <button bindtap="goToMap">Show my position</button>
  </view>
  <view class="div">
  <button bindtap="goToAbcam">Go to pws</button>
  </view>
  <view class="div form">
  <form bindsubmit="submitToAbcamSearch">
    <input placeholder="e.g. p53 or other" name="searchKeyword"/>
    <button form-type="submit"> Search for keyword </button>
  </form>
  
  </view>
</view>
