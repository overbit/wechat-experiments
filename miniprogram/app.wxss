/**app.wxss**/
@import 'style/weui.wxss';

page {
  background-color: #dedfdf;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  height: 100%;
}
.page__hd {
  padding: 80rpx;
  font-size: 3rem;
  line-height: 1.3;
  color: #717c7d;
  margin: 0 0 .75em;
  /* padding: 0; */
  font-weight: 400;
  font-family: Lubalin Medium,Century Gothic,Arial,sans-serif;
}
.page__bd {
  padding-bottom: 80rpx;
}
.page__bd_spacing {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.page__ft{
  width:100%;
  text-align: center;
  margin: 0 auto;
  position: absolute;
  padding-bottom: 20rpx;
  bottom: 0;
}

.page__title {
  text-align: left;
  font-size: 40rpx;
  font-weight: 400;
}

.page__desc {
  margin-top: 10rpx;
  color: #888888;
  text-align: left;
  font-size: 28rpx;
}

.page__half_center {
  margin: 0 auto;
  width: 60%;
}

button[size=mini] {
  width: 30%;
  margin: 1% auto;
}
button[size=normal] {
  width: 90%;
  margin: 1% auto;
}

button[type="light-warn"]{
  color: white;
  background-color:#EC8B89;
}

button[type="warn"]{
  color: white;
  background-color:#F4364C;
}

.btn {
  border-radius: 2px;
  border: 0;
  display: block;
  padding-left: 28rpx;
  padding-right: 28rpx;
  margin: 0;
  line-height:2.55555556;
  vertical-align: middle;
  color: #fff;
  background: #F4364C;
  white-space: nowrap;
  -webkit-appearance: none;
  cursor: pointer;
  font-size:18px;
  text-align:center;
  text-decoration:none;  
  transition: all .25s ease;
}

.overlay__title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 400;
}

.overlay__desc {
  margin-top: 10rpx;
  /* color: #888888; */
  text-align: center;
  font-size: 28rpx;
}

.overlay__bd {
  text-align: center;
  font-size: 24rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}


.cl {
  display: inline;
  position: relative;
  margin: 0 auto;
}

.cl2 {
  width: 50%;
  margin: 0 auto;
}

.pattern-bg{
  background: url(data:image/svg+xml;base64,);
}

.bg-red {
  background-color: #F4364C;
}

.full-height{
  height: 100%; margin: 0px; padding: 0px;
}