page {
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft{
  width:100%;
  text-align: center;
  margin: 0 auto;
  position: absolute;
  padding-bottom: 10px;
  bottom: 0;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}

.page__half_center {
  margin: 0 auto;
  width: 60%;
}


.cl {
  display: inline;
  position: relative;
  margin: 0 auto;
}

.cl2 {
  width: 50%;
  margin: 0 auto;
}



button[size=mini] {
  width: 30%;
  margin: 1% auto;
}
button[size=normal] {
  width: 90%;
  margin: 1% auto;
}

button[type="light-warn"]{
  color: white;
  background-color:#EC8B89;
}

button[type="warn"]{
  color: white;
  background-color:#F4364C;
}


.overlay__title {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
}

.overlay__desc {
  margin-top: 5px;
  /* color: #888888; */
  text-align: center;
  font-size: 14px;
}

.overlay__bd {
  text-align: center;
  font-size: 12px;
  padding-left: 15px;
  padding-right: 15px;
}

view {
  background-color: white;
}